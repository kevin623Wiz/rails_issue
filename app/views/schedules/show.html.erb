<%= render "shared/partial-header" %> <%# ヘッダーのパーシャル %>

<h3 class = "page-title">スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @schedule.start %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @schedule.finish %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @schedule.allday == true %>
        ◯
      <% else @schedule.allday == false %>

      <% end %>
    </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @schedule.memo %></td>
  </tr>
</table>

<div class = "back-link">
  <ul>
    <li><%= link_to "一覧に戻る", :schedules %></li>
  </ul>
</div>